# ===========================================
# PrenoPinzo Production Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Django Settings
SECRET_KEY=generate-a-secure-random-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Application URL (used for email links)
APP_BASE_URL=http://localhost

# SendGrid Email Configuration
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-api-key-here
FROM_EMAIL=PrenoPinzo <noreply@your-verified-domain.com>

# Family Email Addresses
EMAIL_ANDREA=andrea@example.com
EMAIL_FABRIZIO=fabrizio@example.com

# Database (optional - defaults to /app/data/db.sqlite3)
# DATABASE_PATH=/app/data/db.sqlite3
